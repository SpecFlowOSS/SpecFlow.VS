<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <IsPackable>false</IsPackable>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>..\..\..\Key.snk</AssemblyOriginatorKeyFile>
    <NoWarn>NU1608</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <TestedSpecFlowVersion>3.8.14</TestedSpecFlowVersion>
    <TestedSpecFlowTestFramework>mstest</TestedSpecFlowTestFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.0.0" />
    <PackageReference Include="FluentAssertions" Version="6.2.0" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>

    <PackageReference Include="SpecFlow" Version="3.8.14" />
    <PackageReference Include="SpecFlow.$(TestedSpecFlowTestFramework)" Version="$(TestedSpecFlowVersion)" />
    <PackageReference Condition="'$(TestedSpecFlowTestFramework)' == 'mstest'" Include="MSTest.TestFramework"
                      version="2.2.7" />
    <PackageReference Condition="'$(TestedSpecFlowTestFramework)' == 'nunit'" Include="nunit" version="3.13.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference
      Include="..\..\..\Connectors\SpecFlow.VisualStudio.SpecFlowConnector.Models\SpecFlow.VisualStudio.SpecFlowConnector.Models.csproj" />
    <ProjectReference
      Include="..\..\..\Connectors\SpecFlow.VisualStudio.SpecFlowConnector.V2\SpecFlow.VisualStudio.SpecFlowConnector.V2.csproj" />
  </ItemGroup>

</Project>
